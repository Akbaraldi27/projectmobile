<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/register_image"
        android:alpha="0"
        tools:alpha="100"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Sebelum Memulai"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:alpha="0"
        tools:alpha="100"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins"
        android:text="Silahkan Register terlebih dahulu"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:alpha="0"
        tools:alpha="100"/>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/backgroundtint"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etlEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        android:alpha="0"
        tools:alpha="100"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins"
            android:hint="Email"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etlPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:endIconMode="password_toggle"
        android:layout_below="@id/etlEmail"
        android:alpha="0"
        tools:alpha="100"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins"
            android:hint="Password"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etlConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:endIconMode="password_toggle"
        android:layout_below="@id/etlPassword"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        android:alpha="0"
        tools:alpha="100"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:hint="Confirm Password"
            android:textColor="@color/black"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Sudah Punya Akun Masuk!!"
        android:textStyle="bold|italic"
        android:textSize="11sp"
        android:textColor="#804B8582"
        android:alpha="0"
        tools:alpha="100"

        android:layout_below="@id/etlConfirmPassword"/>

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/tvLogin"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#804B8582"
        android:fontFamily="@font/poppins_bold"
        android:text="Login"
        android:textSize="15sp"
        android:textColor="@color/white"
        tools:alpha="100" />


    </RelativeLayout>

</LinearLayout>